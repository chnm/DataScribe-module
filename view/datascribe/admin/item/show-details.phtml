    $reviewed = $item->reviewed();
    $reviewedBy = $item->reviewedBy();
    ?>
    <div class="value"><?php
    echo $reviewed
        ? sprintf(
            '%s by %s',
            $this->i18n()->dateFormat($reviewed, 'long', 'medium'),
            null === $reviewedBy
                ? $this->translate('[Unknown]')
                : $reviewedBy->link($reviewedBy->name())
